type Post {
  id: ID! @id
  published: Boolean! @default(value: false)
  title: String!
  content: String!
  comments: [Comment]  @relation(link: TABLE)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Comment {
  id: ID! @id
  content: String
  is_deleted: Boolean @default(value: false)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

enum UserType {
  ADMIN
  CLIENT
  PERSONNEL
}

enum PersonnelDocumentTypes {
  GUARD_CARD
  BATON_PERMIT
  CPR_CERTIFICATE
  RESUME
  EXPOSED_FIREARM_PERMIT
  CCW_PERMIT
  POST_CERTIFICATION
  DD214
  OTHERS
}

type User {
  id: ID! @id
  email: String! @unique
  password: String!
  name: String
  address: String
  city: String
  state: String
  zip: String
  phone: String
  company: String
  date_of_birth: DateTime
  type: UserType
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type PersonnelMeta {
  id: ID! @id
  user: User!  @relation(link: INLINE)
  driving_licence_id: String
  biograhpy: String
  experience: String
  certification: String
  social_security_number: String
  documents: [PersonnelDocuments!] @relation(link: TABLE)
  photos: [PersonnelPhotos!] @relation(link: TABLE)
  references: [PersonnelReferences!] @relation(link: TABLE)
  interviews: [PersonnelInterview!] @relation(link: TABLE)
  is_verified: Boolean @default(value: false)
  createdAt: DateTime!
  updatedAt: DateTime!
}

type PersonnelDocuments {
  id: ID! @id
  doc_name: String!
  doc_type: PersonnelDocumentTypes!
  filename: String!
  mimetype: String!
  encoding: String!
  url: String!
  is_verified: Boolean @default(value: false)
  expiry_date: DateTime
  is_deleted: Boolean @default(value: false)
  createdAt: DateTime!
  updatedAt: DateTime!
}

type PersonnelPhotos {
  id: ID! @id
  filename: String!
  mimetype: String!
  encoding: String!
  url: String!
  is_primary: Boolean @default(value: false)
  is_deleted: Boolean @default(value: false)
  createdAt: DateTime!
  updatedAt: DateTime!
}

type PersonnelReferences {
  id: ID! @id
  email: String!
  name: String!
  phone: String!
  createdAt: DateTime!
  updatedAt: DateTime!
}

type PersonnelInterview {
  id: ID! @id
  interviewed_by: User! @relation(link: INLINE)
  interviewed_date: DateTime!
  status: String!
  createdAt: DateTime!
  updatedAt: DateTime!
}
